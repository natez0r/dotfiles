[user]
	name = Nate Roy
	email = nroywpi@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
[merge]
	tool = diffmerge
[diff]
	tool = diffmerge
	renames = true
[show]
  tool = less -N
[alias]
  c = commit
  co = checkout
  s = status
  r = rebase
  m = merge
  l = log
  p = push origin
  up = fetch
  prune = remote prune origin
  re = reset --hard HEAD
  f = fetch
  d = diff
  ds = diff --staged --color-words
  b = branch
  ba = branch -a
  lp = !git log --format=format:"%s"  
  files = show --pretty="format:" --name-only
  su = submodule update
  si = submodule init
  res = reset
  history = log --follow -p
